<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/ic_ayah_play"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:tint="#1B5E20" />

    <TextView
        android:text="Start Your Journey"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Create your first Islamic habit and begin consistency."
        android:textColor="#444"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_create_first_habit"
        android:text="+ Create Your First Habit"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/button_green_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="12dp" />

</LinearLayout>
