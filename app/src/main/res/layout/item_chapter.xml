<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:padding="12dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_chapter_number"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:background="@drawable/bg_verse_number_circle"
        android:gravity="center"
        android:text="1"
        android:textColor="#1B5E20"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_chapter_texts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_chapter_number"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_chapter_name_ar">

        <TextView
            android:id="@+id/tv_chapter_name_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Al-Fatihah"
            android:textColor="#1B5E20"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_chapter_meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Opener • 7 verses"
            android:textColor="#666666"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_chapter_name_ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الفاتحة"
        android:textColor="#1B5E20"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
