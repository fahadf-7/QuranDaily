<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp"
    android:layout_height="match_parent">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/habitTrackerTitle"
            android:text="Islamic Habit Tracker"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B5E20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/habitTrackerSubtitle"
            android:text="Welcome back!"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/habitTrackerTodayStats"
            android:text="0/1 completed today â€¢ 0% progress"
            android:textSize="13sp"
            android:textColor="#555"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Add Habit Button -->
    <Button
        android:id="@+id/btnAddHabit"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/button_yellow_background"
        android:text="+ Add"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginTop="10dp" />

    <!-- Habits List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/habitListRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <!-- Empty Screen -->
    <include
        android:id="@+id/emptyHabitsLayout"
        layout="@layout/layout_empty_habits" />

</LinearLayout>
