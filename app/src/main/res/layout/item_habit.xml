<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_check"
                android:src="@drawable/ic_check_circle"
                android:tint="#757575"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView
                android:id="@+id/tv_habit_title"
                android:text="Learn Hadith"
                android:layout_marginStart="12dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_edit"
                android:src="@drawable/ic_edit"
                android:tint="#777"
                android:layout_width="22dp"
                android:layout_height="22dp" />

            <ImageView
                android:id="@+id/iv_delete"
                android:src="@drawable/ic_close_dark"
                android:tint="#777"
                android:layout_marginStart="10dp"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </LinearLayout>

        <!-- Priority Chip -->
        <TextView
            android:id="@+id/tv_priority"
            android:text="Medium"
            android:background="@drawable/bg_priority_medium"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_description"
            android:text="Study one hadith daily"
            android:textSize="14sp"
            android:textColor="#444"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Progress Circles -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_last7days"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Stats Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_streak"
                android:text="0\nDay Streak"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_success_rate"
                android:text="0%\nSuccess Rate"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
